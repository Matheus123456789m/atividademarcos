@model Aula2407.Models.Produto

@{
    ViewData["Title"] = "..::Cadastro Produtos::..";
}

@* Codigo formulario cadastro produtos *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Produtos</h1>
        </div>
    </div>
    <form method="post">
        @* LINHA NOME, CODIGO ,VALOR , LOTE *@
        <div class="row">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" id="Nome" type="text" />
            </div>
            <div class="col-lg-3">
                <label asp-for="Codigo" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Codigo" class="form-control" id="Codigo" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="valor" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="valor" class="form-control" id="valor" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="lote" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="lote" class="form-control" id="lote" type="text" />
            </div>
            
        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>

