@model Aula2407.Models.Cliente

@{
    ViewData["Title"] = "..::Cadastro Cliente::..";
}

@* Codigo formulario cadastro cliente *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Cliente</h1>
        </div>
    </div>
    <form method="post">
        @* LINHA NOME, CPF,RF E DN *@
        <div class="row">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" id="Nome" type="text" />
            </div>
            <div class="col-lg-3">
                <label asp-for="CPF" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="CPF" class="form-control" id="CPF" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="RG" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="RG" class="form-control" id="RG" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="Usuario" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Usuario" class="form-control" id="Usuario" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="Senha" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Senha" class="form-control" id="Senha" type="text" />
            </div>
        </div>
        @* LINHA ENDEREÇO *@
        <div class="row">
            <div class="col-lg-2">
                <label asp-for="CEP" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="CEP" class="form-control" id="CEP" type="text" />
            </div>
            <div class="col-lg-2">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    UF
                </label>
                <input type="text" class="form-control" id="" />
            </div>
            <div class="col-lg-3">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    Cidade
                </label>
                <input type="text" class="form-control" id="" />
            </div>
            <div class="col-lg-2">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    Bairro
                </label>
                <input type="text" class="form-control" id="" />
            </div>
            <div class="col-lg">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    Rua
                </label>
                <input type="text" class="form-control" id="" />
            </div>
            <div class="col-lg-1">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    Numero
                </label>
                <input type="text" class="form-control" id="" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="" class="col-sm-2 col-form-label fw-bold">
                    Complemento
                </label>
                <input type="text" class="form-control" id="" />
            </div>
        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>