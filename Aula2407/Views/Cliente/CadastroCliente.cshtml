@model Aula2407.Models.Cliente

@{
    ViewData["Title"] = "..::Cadastro Cliente::..";
}

@* Codigo formulario cadastro cliente *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Cliente</h1>
        </div>
    </div>
    <form method="post">
        @* LINHA NOME, CPF,RF E DN *@
        <div class="row">
            <div class="col">
                <label asp-for="NomeCompleto" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="NomeCompleto" class="form-control" id="NomeCompleto" type="text" />
            </div>
            <div class="col-lg-3">
                <label asp-for="CPF" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="CPF" class="form-control" id="CPF" type="text" />
            </div>
            
            <div class="col-lg-2">
                <label asp-for="CPF" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="CPF" class="form-control" id="CPF" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="TelefoneCelular" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="TelefoneCelular" class="form-control" id="TelefoneCelular" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="Endereço" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Endereço" class="form-control" id="Endereço" type="text" />
            </div>
        </div>
        
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>